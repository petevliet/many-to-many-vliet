
<div class="page-header">
  <h1>Create a Product </h1>
</div>

<%= form_for @product do |f| %>

     <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
     </p>

     <p>
        <%= f.label :price %>
        <%= f.number_field :price %>
     </p>

      <p>
        <%= f.label :company_id %>
        <em><%= f.collection_select :company_id, Company.all, :id, :name, {include_blank: true}, {class: "form-control"} %></em>
    </p>

<%= f.submit %>

<% end %>
